page{
  background: #ffffff;
}
.header{
  height: 45px;
  line-height: 45px;
  background-color: #00b38a;
  color: #fff;
  font-size: 18px;
  text-align: center;
  position: relative;
}
.iconfont{
  color: #4FC1A7;
}
.jobtitle{
  height: 48px;
  line-height: 48px;
  padding: 0 14px;
  /* color: #333; */
  color: #4FC1A7;
  font-size: 20px;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.jobmsg{
  display: flex;
  box-sizing: border-box;
  padding: 15px 15px 0 15px;
}
.jobmsg-item{
  flex: 1;
}
.tabscard-con{
  padding:15px;
  color:#888888;
  font-size: 14px;
}
.tabscard{
  font-size: 12px;
  line-height: 12px;
  padding: 0 3px;
  border: 1px solid #4FC1A7;
  border-radius: 3px;
  color: #4FC1A7;
  margin-right: 5px;
}

.job-desc{
  height: 36px;
  line-height: 36px;
  padding-left: 15px;
  color: #00b38a;
  font-size: 14px;
  background-color: #d2f9f0;
}
.job-description{
  word-break: break-all;
  padding: 15px;
  color: #555;
  font-size: 12px;
  line-height: 22px;
}
.ilike{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  height: 44px;
  width: 92%;
  padding: 12px 4%;
  line-height: 44px;
  background-color: rgba(255,255,255,0.8);
}
.ilikeyou{
  width: 100%!important;
  background-color: #00b38a!important;
  font-size: 16px;
}